{
  "compilerOptions": {
    "skipLibCheck": true,
    "target": "es6",
    "module": "CommonJS",
    "lib": ["es6"],
    "types": ["node"],
    "outDir": "build",
    "rootDir": "src",
    "strict": true,
    "strictNullChecks": true,
    "noImplicitAny": true,
    "esModuleInterop": true,
    "resolveJsonModule": true
  },
  "include": ["src/**/*"]
}